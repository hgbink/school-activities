{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/taxonomy.schema.json",
  "title": "School Activities Taxonomy",
  "description": "JSON outputs generated from Markdown by md2json.mjs",
  "type": "object",
  "oneOf": [
    {
      "title": "Flat taxonomy",
      "type": "object",
      "required": [
        "title",
        "items"
      ],
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1
        },
        "items": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      }
    },
    {
      "title": "Sectioned taxonomy",
      "type": "object",
      "required": [
        "title",
        "sections"
      ],
      "additionalProperties": false,
      "properties": {
        "title": {
          "type": "string",
          "minLength": 1
        },
        "sections": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "items": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "subsections": {
                "type": "object",
                "minProperties": 1,
                "additionalProperties": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "string",
                    "minLength": 1
                  }
                }
              }
            },
            "anyOf": [
              {
                "required": [
                  "items"
                ],
                "properties": {
                  "items": {
                    "minItems": 1
                  }
                }
              },
              {
                "required": [
                  "subsections"
                ]
              }
            ]
          }
        }
      }
    }
  ]
}